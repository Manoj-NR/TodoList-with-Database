<%- include("header") -%>

    <div class="box", id="heading">
      <h1><%= listTitle %></h1>
    </div>
    <div class="box">

      <% kindItems.forEach(function(itm){ %>

          <form class="" action="/delete" method="post">
            <div class="item">
              <input type="checkbox" name="check" value="<%=itm._id%>" onChange="this.form.submit()">
              <p><%= itm.name%></p>
            </div>
            <input type="hidden" name="listName" value="<%=listTitle %>"></input>
          </form>


  <% }) %>

        <form class="btnn" action="/" method="post">
          <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
          <button type="submit" name="btn" value="<%= listTitle %>">+</button>
        </form>
    </div>

<%- include("footer") -%>
